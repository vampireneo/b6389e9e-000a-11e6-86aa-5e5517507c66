aside.sidemenu
  nav.submenu
    h1.text-center Submenu
    ul
      +link('Home')
      +link('Examples').active
      +link('Contact')
      +link('About')
  section.contact-us
    header
      img(src=require("../img/avatar.jpg"), alt="Neo's Profile Picture").center-block
    dl.contact-info.dl-horizontal
      dt Name
      dd Neo Choi
      dt Email
      dd: a(href="mailto:neo.choi@example.com") neo.choi@example.com
      dt Phone
      dd: a(href="tel:+852 9123 4567") +852 9123 4567
    section.send-me-msg
      h1.text-center Send me a message
      form
        div.form-group
          label(for="InputSubject") Subject
          input(type="text", id="SendMsgSubject").form-control
        div.form-group
          label(for="SendMsgMessage") Message
          textarea.form-control(rows="3", id="SendMsgMessage")
          footer
            span(id="SendMsgMessageResponse")
            span(id="SendMsgMessageCount") 0 /140
        button(type="submit").btn.btn-info.btn-block Send
    section.office-address
      h1.text-center Or meet me at the office
      a(href="https://goo.gl/maps/5b1zqABK4LP2" target="_blank"): img(src=require("../img/map.gif"), alt="Map").officeMap
